{
	"name": "logotel/lightning-joomla-common",
	"description": "Common scripts for Lightning Communities",
	"license": "MIT",
	"keywords": ["joomla","lightning"],
	"type": "composer-plugin",
	"authors": [
		{
			"name": "Simone Scardoni",
			"email": "s.scardoni@logotel.it"
		}
	],
	"autoload": {
		"psr-4": {
			"SimoSca\\": "src/"
		}
